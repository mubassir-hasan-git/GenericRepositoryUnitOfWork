@model Product
@{
    ViewData["Title"] = "AddProduct";
}

<h2>AddProduct</h2>

<form method="post" asp-action="AddProduct">
    <div class="row">
        <div class="col-md-6">
            <label>Name</label>
            <input type="text" asp-for="Name" class="form-control" required=""/>
        </div>
        <div class="col-md-6">
            <label>Brand</label>
            <select asp-for="BrandId" class="form-control" asp-items="@ViewBag.BrandList"></select>
        </div>
        
        <input type="submit" value="Save" class="btn btn-success"/>
    </div>
</form>